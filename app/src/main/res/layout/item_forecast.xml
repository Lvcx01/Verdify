<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Data (es. Lunedì 25) -->
    <TextView
        android:id="@+id/forecastDate"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Domani"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Icona -->
    <ImageView
        android:id="@+id/forecastIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <!-- NUOVO: Descrizione (es. Pioggia leggera) -->
    <!-- layout_weight=1 significa: prenditi tutto lo spazio libero in mezzo -->
    <TextView
        android:id="@+id/forecastDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Cielo sereno"
        android:textSize="14sp"
        android:textColor="#555555"
        android:ellipsize="end"
        android:maxLines="1"/>

    <!-- Temperatura -->
    <TextView
        android:id="@+id/forecastTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20°C"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
</LinearLayout>