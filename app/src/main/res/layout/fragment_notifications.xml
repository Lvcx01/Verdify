<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Le tue notifiche"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Qui per ora mettiamo un testo statico, poi potrai collegarlo a una lista vera -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Nessuna nuova notifica meteo.\n\n• Ricordati di innaffiare l'Orchidea (ieri).\n\n• Benvenuto nell'app!"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.5"/>

</LinearLayout>