<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <!-- Header con Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1B5E20" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1B5E20"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Notifiche -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="Notifications"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1B5E20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- SWITCH: Testo forzato scuro -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Enable Notifications"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <!-- CHECKBOX: Testo forzato scuro -->
                    <CheckBox
                        android:id="@+id/checkWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weather Alerts"
                        android:textColor="#333333"
                        android:buttonTint="#1B5E20"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/checkCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Care Reminders"
                        android:textColor="#333333"
                        android:buttonTint="#1B5E20"
                        android:enabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Backup -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="Data &amp; Backup"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1B5E20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- EXPORT: Verde Pieno -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExport"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="Export Data"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:backgroundTint="#1B5E20"
                        app:cornerRadius="12dp" />

                    <!-- IMPORT: Bianco con bordo Verde -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImport"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:text="Import Data"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        app:strokeColor="#1B5E20"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>