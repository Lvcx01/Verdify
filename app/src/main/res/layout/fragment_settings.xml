<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SEZIONE 1: DATI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestione Dati"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#757575"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Esporta Dati (Backup)"
                    android:backgroundTint="#2196F3"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnImport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importa Dati"
                    android:backgroundTint="#4CAF50"
                    android:drawableLeft="@android:drawable/ic_menu_upload"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nota: Importando i dati, quelli attuali verranno sovrascritti."
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#D32F2F"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SEZIONE 2: NOTIFICHE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferenze Notifiche"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#757575"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:id="@+id/switchNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abilita tutte le notifiche"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:checked="true"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginBottom="16dp"/>

                <CheckBox
                    android:id="@+id/checkWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allerte Meteo"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/checkCare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promemoria cura piante"
                    android:checked="true"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>