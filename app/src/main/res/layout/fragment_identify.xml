<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="120dp">
        <!-- paddingBottom 120dp serve per non finire dietro la navbar -->

        <!-- TITOLI -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identify Plant"
            android:textColor="#1B5E20"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Take a picture or upload from gallery"
            android:textColor="#558B2F"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <!-- CARD FOTO (Ridimensionata) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/photoContainer"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#F1F8E9"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- Nota: Ho messo height fissa a 320dp per evitare che diventi gigante -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Placeholder (Foglia grigia) -->
                <LinearLayout
                    android:id="@+id/placeholderContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_plant_illustration"
                        app:tint="#BDBDBD" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No image selected"
                        android:textColor="#9E9E9E" />
                </LinearLayout>

                <!-- Immagine Vera (Inizialmente nascosta o vuota) -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    tools:src="@drawable/bg_weather_sunny"/>
                <!-- tools:src serve solo per l'anteprima in Android Studio -->

                <!-- Icona Crop/Edit in alto a destra (solo estetica per ora) -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_weather_card"
                    android:backgroundTint="#FFFFFF"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_crop"
                    app:tint="#4CAF50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- PULSANTI CAMERA / GALLERIA -->
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/photoContainer">

            <!-- Camera -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cameraButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Camera"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart"
                app:backgroundTint="#00695C"
                app:cornerRadius="16dp" />

            <!-- Gallery -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/galleryButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Gallery"
                android:textColor="#00695C"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="textStart"
                app:iconTint="#00695C"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#00695C"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp" />
        </LinearLayout>

        <!-- BOTTONE IDENTIFICA (Grosso Arancione) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/identifyButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:text="IDENTIFY PLANT"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FF9800"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/buttonsContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>